{% extends 'base.html.twig' %}

{% block title %}Détails du {{ action_name | capitalize }}{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }
    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

<div class="example-wrapper">
    <h1>{{ controller_name }} - Action : {{ action_name | capitalize }} ✅</h1>

{% if action_name == 'show' %}
	<p>Vous consultez le contenu du panier.</p>
{% else %}
	<p>Action inconnue.</p>


    {% endif %}
</div>
{% endblock %}
